                                                <tr style="margin-top: 50px;">
                                                    <td style="padding-top: 70px;">
                                                        <span t-field="o.ttd.name" style="text-decoration: underline;"/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <span t-field="o.ttd.job_id.name"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                    </td>
                                    </t>
                                </table>
                            </div>
                        </div>
                    </t>
                </t>
            </t>

        </template>
    </data>
